<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e7cc3"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Hello from Pedro"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/changeColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#d9b8c4"
        android:padding="10dp"
        android:text="Select to change the color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeColorButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#d9b8c4"
        android:padding="10dp"
        android:shadowColor="@color/white"
        android:text="Click to change background"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeBackgroundButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#d9b8c4"
        android:padding="10dp"
        android:text="Click to change text"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeCustomTextButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:text="Create your own text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeTextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#d9b8c4"
        android:padding="10dp"
        android:text="Change to custom text"
        android:textSize="30dp" />

</RelativeLayout>